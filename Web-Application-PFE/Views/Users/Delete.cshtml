@model Web_Application_PFE.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Delete";
}
@section Styles {
    <link rel="stylesheet" href="~/css/Gestion-RFQ.css" />
}

<main role="main" class="pb-3" style="margin-left:153px; margin-top:10px;">
    <div class="card shadow-sm p-3 mb-3 bg-white rounded" style="width: 24rem;">
        <div class="card-body p-3">
            <h5 class="card-title text-center text-danger mb-3">Confirmer la suppression</h5>
            <p class="text-center mb-4" style="font-size: 14px;">Êtes-vous sûr de vouloir supprimer cet utilisateur ?</p>

            <div class="mb-3" style="font-size: 14px;">
                <p class="mb-2"><strong>@Html.DisplayNameFor(model => model.Nom):</strong> @Html.DisplayFor(model => model.Nom)</p>
                <p class="mb-2"><strong>@Html.DisplayNameFor(model => model.Prenom):</strong> @Html.DisplayFor(model => model.Prenom)</p>
                <p class="mb-2"><strong>@Html.DisplayNameFor(model => model.Role):</strong> @Html.DisplayFor(model => model.Role)</p>
                <p class="mb-2"><strong>@Html.DisplayNameFor(model => model.Email):</strong> @Html.DisplayFor(model => model.Email)</p>
               
            </div>

            <form asp-action="Delete" class="text-center">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-sm" style="padding: 6px 12px; font-size: 14px;">Supprimer</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm" style="padding: 6px 12px; font-size: 14px; margin-left: 8px;">Annuler</a>
            </form>
        </div>
    </div>
</main>
