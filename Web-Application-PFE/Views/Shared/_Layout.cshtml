                            <i class="bi bi-grid-3x3" style="color:limegreen;font-size: 1rem; transform: scale(1.2);"></i>
                        </div>

                        <!-- Mail Icon -->
                        <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-blue-50 p-2">
                            <i class="bi bi-envelope" style="font-size: 1.5rem;color: #3b82f6;text-shadow: 0 0 0.5px #3b82f6;"></i>
                        </div>

                        <!-- Notification Button -->
