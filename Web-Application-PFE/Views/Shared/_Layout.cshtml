                            <button id="notification-btn" class="ghost-btn text-white p-1 border-2 border-white rounded-full">
                                <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-red-50 p-2">
                                    <i class="bi bi-bell-fill" style="font-size: 1.4rem;color: red;text-shadow: 0 0 0.5px red;"></i>
                                    <span id="notification-badge" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full h-4 w-4 flex items-center justify-center hidden">0</span>
                                </div>
                            </button>

                            <!-- Notification Dropdown -->
                            <div id="notification-dropdown" class="absolute mt-2 bg-white rounded-md shadow-lg z-50 hidden" style="left: 0; width: 230px;">
                                <div class="p-3 border-b">
                                    <h3 class="font-semibold text-gray-800">Notifications</h3>
                                </div>
                                <div id="notification-list" class="max-h-96 overflow-y-auto">
                                    <div class="p-4 text-center text-gray-500">
                                        Chargement des notifications...
