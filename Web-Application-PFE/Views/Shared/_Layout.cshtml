@inject Web_Application_PFE.Services.Interfaces.IDashboardService DashboardService
@using Microsoft.AspNetCore.Identity
@using Web_Application_PFE.Models
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "_Layout";

    // Initialize with default values
    var nom = "Utilisateur inconnu";
    var prenom = "Non défini";
    var photoPath = "/images/person.jpg";
    var role = "Aucun rôle";
    var isAdmin = false;
    var isValidateur = false;

    // Retrieve user info if signed in
    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            nom = user.Nom ?? nom;
            prenom = user.Prenom ?? prenom;
            photoPath = string.IsNullOrEmpty(user.imagePath) ? 
                photoPath : 
                user.imagePath.StartsWith("/") ? user.imagePath : $"/images/{user.imagePath}";

            var roles = await UserManager.GetRolesAsync(user);
            role = roles.FirstOrDefault() ?? role;
            isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
            isValidateur = await UserManager.IsInRoleAsync(user, "Validateur");
        }
    }

    var dashboardStats = DashboardService.GetDashboardStats();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <title> RFQ - PLATEFORME </title>

    <link href="~/css/tailwind.min.css" rel="stylesheet" asp-append-version="true">
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/Style.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap-icons.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/bootstrap.min.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/sweetalert2.min.css" asp-append-version="true">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>


    <script src="~/js/lucide.min.js" asp-append-version="true" defer></script>
    <script src="~/js/feather.min.js" asp-append-version="true" defer></script>

    @RenderSection("Styles", required: false)
</head>
